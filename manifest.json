{
  "manifest_version": 3,
  "name": "Volume Control",
  "description": "Volume Control Extension",
  "version": "1.0",
  "action": {
      "default_title": "Volume Control",
      "default_icon": "icons/icon-32.png"
  },
  "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
  },
  "content_scripts": [
      {
          "js": [
              "js/content.js"
          ],
          "css": [
          ],
          "matches": [
              "<all_urls>"
          ]
      }
  ],
  "permissions": [
      "tabs",
      "activeTab",
      "offscreen", 
      "tabCapture",
      "storage",
      "contextMenus"
  ],
  "host_permissions": [
      "<all_urls>"
  ],
  "background": {
      "service_worker": "js/background.js"
  }
}